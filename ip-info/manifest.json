{
    "manifest_version": 3,
    "name": "Host information",
    "version": "1.0",

    "description": "Fetch domain or IP address information",
    "author": "Nitin choudhary @okpalindrome",

    "permissions":["activeTab"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_title": "Fetch host details",
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    }
}